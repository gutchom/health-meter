{
  "name": "super-game",
  "version": "1.0.0",
  "description": "A mental health logger.",
  "main": "index.js",
  "author": "gutchom",
  "license": "MIT",
  "homepage": "https://mentalgraph.gutchom.com",
  "repository": {
    "type": "git",
    "url": "git@github.com:gutchom/mentalgraph.git"
  },
  "bugs": {
    "url": "https://github.com/gutchom/mentalgraph/issues"
  },
  "engines": {
    "node": "^12.14.0",
    "npm": "^6.13.4"
  },
  "scripts": {
    "start": "cross-env NODE_ENV=development run-p -s count dev:**",
    "test": "cross-env NODE_ENV=test ts-jest",
    "testing": "npm t -- --watch",
    "lint": "run-s lint:*",
    "lint:css": "stylelint 'src/app/components/**/*.tsx' --fix",
    "lint:js": "eslint ./src/**/*.ts*",
    "dev:js": "webpack --mode=development --progress --watch",
    "dev:css": "postcss ./src/styles/pages/**/*.css -d ./public/css -w",
    "dev:img": "cpx './src/images/**/*' ./public/img -w",
    "dev:assets": "cpx './src/assets/**/*' ./public -w",
    "dev:serve": "cd ./functions && npm run serve",
    "dev:serve:sync": "browser-sync start -b 'GoogleChrome' -f ./public -p localhost:5000 --port 3333",
    "build": "cross-env NODE_ENV=production run-s lint test clean build:**",
    "build:js": "webpack --mode=production --progress",
    "build:css": "postcss ./src/styles/pages/**/*.css -d ./public/css",
    "build:img": "cpx './src/images/**/*' './public/img'",
    "build:assets": "cpx './src/assets/**/*' './public'",
    "clean": "rimraf ./public/* && mkdir ./public/js ./public/img",
    "count": "printf '\\e[36m\n  This project has\\e[35m %s lines\\e[36m of source code!\n\n\\e[m' $(find ./src -name '*.ts*' -o -name '*.css' | xargs wc -l | tail -1 | awk '{print $1}')",
    "check": "npm-check -u"
  },
  "dependencies": {
    "firebase": "^7.21.0",
    "luxon": "^1.25.0",
    "react": "^16.12.0",
    "react-dom": "^16.12.0",
    "react-firebase-hooks": "^2.2.0",
    "react-router-dom": "^5.2.0",
    "uuid": "^8.3.0"
  },
  "devDependencies": {
    "@babel/core": "^7.11.6",
    "@babel/plugin-proposal-class-properties": "^7.10.4",
    "@babel/preset-env": "^7.11.5",
    "@babel/preset-react": "^7.10.4",
    "@babel/runtime": "^7.11.2",
    "@mysticatea/eslint-plugin": "^13.0.0",
    "@types/enzyme": "^3.10.6",
    "@types/jest": "^26.0.14",
    "@types/luxon": "^1.25.0",
    "@types/node": "^14.11.1",
    "@types/power-assert": "^1.5.3",
    "@types/react": "^16.9.49",
    "@types/react-dom": "^16.9.8",
    "@types/react-router-dom": "^5.1.5",
    "@types/uuid": "^8.3.0",
    "@typescript-eslint/eslint-plugin": "^4.1.1",
    "@typescript-eslint/parser": "^4.1.1",
    "babel-jest": "^26.3.0",
    "babel-loader": "^8.0.6",
    "babel-preset-power-assert": "^3.0.0",
    "body-parser": "^1.19.0",
    "browser-sync": "^2.26.12",
    "caniuse-lite": "^1.0.30001133",
    "case-sensitive-paths-webpack-plugin": "^2.3.0",
    "colors": "^1.4.0",
    "cpx": "^1.5.0",
    "cross-env": "^7.0.2",
    "cssnano": "^4.1.10",
    "enzyme": "^3.11.0",
    "enzyme-adapter-react-16": "^1.15.4",
    "eslint": "^7.9.0",
    "eslint-plugin-babel": "^5.3.1",
    "eslint-plugin-import": "^2.22.0",
    "eslint-plugin-jest": "^24.0.1",
    "eslint-plugin-react": "^7.20.6",
    "eslint-plugin-standard": "^4.0.1",
    "eslint-plugin-tsc": "^2.0.0",
    "express": "^4.17.1",
    "git-pre-push": "0.0.5",
    "glob": "^7.1.6",
    "jest": "^26.4.2",
    "nodemon": "^2.0.4",
    "npm-check": "^5.9.0",
    "npm-run-all": "^4.1.5",
    "postcss": "^7.0.26",
    "postcss-browser-reporter": "^0.6.0",
    "postcss-cli": "^7.1.2",
    "postcss-import": "^12.0.1",
    "postcss-preset-env": "^6.7.0",
    "postcss-reporter": "^6.0.1",
    "power-assert": "^1.6.1",
    "pre-commit": "^1.2.2",
    "react-test-renderer": "^16.12.0",
    "rimraf": "^3.0.0",
    "stylelint": "^13.7.1",
    "stylelint-config-standard": "^20.0.0",
    "stylelint-order": "^4.1.0",
    "ts-jest": "^26.3.0",
    "ts-loader": "^8.0.4",
    "typescript": "^4.0.3",
    "webpack": "^4.44.2",
    "webpack-cli": "^3.3.12"
  },
  "pre-commit": [
    "lint"
  ],
  "pre-push": [
    "test"
  ],
  "babel": {
    "presets": [
      "@babel/env",
      "@babel/react"
    ],
    "plugins": [
      "@babel/plugin-proposal-class-properties"
    ],
    "env": {
      "test": {
        "presets": [
          "@babel/typescript",
          "power-assert"
        ]
      }
    }
  },
  "stylelint": {
    "extends": "stylelint-config-standard",
    "plugins": [
      "stylelint-order"
    ],
    "rules": {
      "order/properties-alphabetical-order": true,
      "order/order": [
        "custom-properties",
        "declarations"
      ]
    }
  }
}
